<?page title="Alumnos" contentType="text/html;charset=UTF-8"?>
<zk>
<window title="Alumno" border="normal"
		viewModel="@id('vm') @init('com.instituto.sistema.abm.AlumnoVM')"
		vflex="1" id="Body" apply="org.zkoss.bind.BindComposer">

		<hlayout vflex="1">
			
				<vlayout hflex="1" vflex="1">

					<hbox pack="end" hflex="1" >

						<button label="Agregar"
							iconSclass=" z-icon-plus" onClick="@command('modalAlumnoAgregar')" disabled="@load(!vm.opCrearAlumno)" />

					</hbox>

					<listbox emptyMessage="lista vacÃ­a..." mold="paging" autopaging="true"
						vflex="1" model="@load(vm.lAlumnos)" checkmark="true">

						<listhead>

							<listheader hflex="min" align="center" />
							<listheader label="ID" align="right"
								hflex="min" />
							<listheader label="Nombre" align="left"
								 />
							<listheader label="Apellido" align="left"
								 />
							<listheader label="Activo" align="center"
								width="80px"/>
							<listheader align="center" 
								width="100px"/>


						</listhead>


						<auxhead>

							<auxheader />
							<auxheader />
							<auxheader>
								<textbox
									value="@bind(vm.filtroColumns[0])" instant="true"
									onChange="@command('filtrarAlumno')" hflex="1" />
							</auxheader>

							<auxheader>
								<textbox
									value="@bind(vm.filtroColumns[1])" instant="true"
									onChange="@command('filtrarAlumno')" hflex="1" />
							</auxheader>
						
							<auxheader />
						</auxhead>

						<template name="model">

							<listitem>
								<listcell />
								<listcell label="@load(each.alumnoid)" />
								
								<listcell
									label="@load(each.persona.nombre)" />
									
								<listcell
									label="@load(each.persona.apellido)" />
								
								<listcell>
								
									<if test="@load(each.activo)">
										<label value="Si" />
									</if>


									<if test="@load(!each.activo)">
										<label value="No" />
									</if>
								
								</listcell>
								
								<listcell>
									<hlayout>

										<button iconSclass="z-icon-edit"
											onClick="@command('modalAlumno', alumnoid=each.alumnoid)"
											tooltiptext="Editar" disabled="@load(!vm.opEditarAlumno)"/>
										<button
											iconSclass="z-icon-trash-o" style="background-color:red"
											onClick="@command('borrarAlumnoConfirmacion', alumno=each)"
											tooltiptext="Borrar" disabled="@load(!vm.opBorrarAlumno)"/>

									</hlayout>


								</listcell>


							</listitem>


						</template>

						<listfoot>
							<listfooter span="4" align="left">
								<hlayout>
									<label
										value="@load(vm.lAlumnos.size())" />
									<label value="items" />
								</hlayout>
							</listfooter>
						</listfoot>


					</listbox>

				</vlayout>

		
			
		</hlayout>

	</window>
</zk>